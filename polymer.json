{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "fragments": [
    "src/main-page.html",
    "src/preview-page.html",
    "src/live-page.html",
    "src/my-view404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "bower_components/webcomponentsjs/webcomponents-lite.min.js"
  ],
  "lint": {
    "rules": ["polymer-1"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
